<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgSubLinnerAvarta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/ic_launcher_round"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtSubLinnerName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Name"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold|italic"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtSubLinnerBirthYear"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="25dp"
            android:textStyle="italic"
            android:textSize="14sp"
            android:text="Birth Year  :"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtSubLinnerAge"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="25dp"
            android:text="Age            :"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnSubLinnerEnter"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Enter!"
        android:visibility="visible"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="@drawable/button_selection"
        android:layout_marginTop="25dp"/>
</LinearLayout>