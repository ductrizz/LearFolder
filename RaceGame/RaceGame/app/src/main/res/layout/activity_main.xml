<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewNumber"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:inputType="number"
        android:text="100"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/ckbOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/skbOne"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/scrollbarThumbHorizontal"
        android:max="150"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/icon_charmander"
        android:thumbOffset="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/ckbOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ckbOne"
        app:layout_constraintTop_toTopOf="@+id/ckbOne" />
    <CheckBox
        android:id="@+id/ckbTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ckbOne"
        app:layout_constraintStart_toStartOf="@id/ckbOne"
        app:layout_constraintEnd_toEndOf="@id/ckbOne"
         />

    <SeekBar
        android:id="@+id/skbTwo"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:thumb="@drawable/icon_eevee"
        android:thumbOffset="1dp"
        android:max="150"
        android:progressDrawable="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/ckbTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ckbTwo"
        app:layout_constraintTop_toTopOf="@id/ckbTwo"
        android:background="?android:attr/scrollbarThumbHorizontal"/>
    <CheckBox
        android:id="@+id/ckbThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ckbTwo"
        app:layout_constraintStart_toStartOf="@id/ckbTwo"
        app:layout_constraintEnd_toEndOf="@id/ckbTwo"/>

    <SeekBar
        android:id="@+id/skbThree"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:thumb="@drawable/icon_squirtle"
        app:layout_constraintBottom_toBottomOf="@+id/ckbThree"
        android:thumbOffset="1dp"
        android:max="150"
        android:progressDrawable="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ckbThree"
        app:layout_constraintTop_toTopOf="@id/ckbThree"
        android:background="?android:attr/scrollbarThumbHorizontal"/>

    <Button
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        app:icon="@android:drawable/ic_media_play"
        android:text="Action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />


</androidx.constraintlayout.widget.ConstraintLayout>