<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBackgroud"
    android:layout_width="match_parent"
    android:background="@drawable/theme_02"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtRandomNumber"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="0"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/etxtNumberMin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:ems="1"
        android:textSize="20sp"
        android:hint="Min Number"
        android:inputType="number"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etxtNumberMax"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp"
        android:hint="Max Number"
        android:textStyle="italic|bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/etxtNumberMin"
        app:layout_constraintStart_toStartOf="@+id/etxtNumberMin"
        app:layout_constraintTop_toBottomOf="@+id/etxtNumberMin" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:background="@drawable/button_customize"
        app:layout_constraintBottom_toTopOf="@+id/txtRandomNumber"
        app:layout_constraintEnd_toEndOf="@+id/txtRandomNumber"
        app:layout_constraintStart_toStartOf="@+id/txtRandomNumber"
        app:layout_constraintTop_toBottomOf="@+id/etxtNumberMax" />


</androidx.constraintlayout.widget.ConstraintLayout>